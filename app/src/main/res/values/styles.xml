<resources>

    <!-- Base application theme. -->
    <style name="AppTheme"
        parent="@style/Theme.AppCompat">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- ActionBar style -->
    <style name="MyActionBar"
        parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@color/white</item>
        <item name="background">@color/blue</item>
        <item name="android:titleTextStyle">@style/MyActionBarTextTitle</item>
        <item name="titleTextStyle">@style/MyActionBarTextTitle</item>
    </style>

    <!-- ActionBar Text style -->
    <style name="MyActionBarTextTitle"
        parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>




    <!-- Text in TextViewTitle -->
    <style name="customTextTitle">
        <item name="android:textSize">22dp</item>
        <item name="android:textColor">#00bcd4</item>
    </style>

    <!-- Text in TextViewSensors -->
    <style name="customTextSensors">
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>

    <!-- Text in TextViewInfo -->
    <style name="customTextInfo">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">#00bcd4</item>
    </style>

    <!-- Style in TableRow  -->
    <style name="styleTableRow">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

</resources>
